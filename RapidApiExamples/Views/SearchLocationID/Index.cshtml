@model List<BookingApiLocationSearchViewModel>
@{
    ViewData["Title"] = "Index";
  
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

@using (Html.BeginForm("Index", "SearchLocationID", FormMethod.Post))
{
    <label>Enter City Name</label>
    <input type="text" class="form-control" name="cityName" />
    <br />
    <button class="btn btn-primary">Find ID for the City</button>
}
<br />
<table class="table table-bordered">
    <tr>
        <th>Location (Default "Paris")</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.dest_id</td>
        </tr>
    }
</table>

<a href="/BookingByCity/Index/" class="btn btn-danger">New Reservation Info</a>


